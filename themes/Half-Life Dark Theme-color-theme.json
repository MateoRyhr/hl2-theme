{
  "name": "Half-Life Dark Theme",
  "semanticHighlighting": true,
  "colors": {
    "textCodeBlock.background": "#191B1F",
    "textPreformat.foreground": "#FF9A00",
    "editor.background": "#191B1F",
    "editor.foreground": "#DCDCDC",
    "editorCursor.foreground": "#FF9A00",
    "editorLineNumber.foreground": "#48535E",
    "editorLineNumber.activeForeground": "#FF9A00",
    "activityBar.background": "#131518",
    "activityBarBadge.background": "#FF9A00",
    "activityBarBadge.foreground": "#191B1F",
    "sideBar.background": "#16181C",
    "sideBarTitle.foreground": "#DCDCDC",
    "statusBarItem.remoteBackground": "#2E8B57",
	// Resalta la línea donde está el cursor (clave para no perderte)
    "editor.lineHighlightBackground": "#2c313a33", 
    "editor.lineHighlightBorder": "#3E4451",

    // Guías de indentación (Naranja para el bloque actual)
    "editorIndentGuide.activeBackground1": "#FF9A00", 
    "editorIndentGuide.background1": "#3b4048",

    // Paréntesis y llaves coincidentes (Efecto Gravity Gun)
    "editorBracketMatch.background": "#4FC1FF33",
    "editorBracketMatch.border": "#4FC1FF",

    // Selección de texto más visible
    "editor.selectionBackground": "#3E4451AA",

    // Barra de estado más profesional (Menos distractora)
    "statusBar.background": "#131518", 
    "statusBar.foreground": "#FF9A00",
    "statusBar.border": "#FF9A0033",
		/* Terminal basic colors */
    "terminal.background": "#131518",
    "terminal.foreground": "#DCDCDC",

    /* ANSI colors: These define how specific types of output (like errors) look */
    
    // Error color - A deep, alarming Red from Combine consoles
    "terminal.ansiRed": "#B52E2E", 
    "terminal.ansiBrightRed": "#FF4B4B",

    // Warning color - More HEV Suit Orange
    "terminal.ansiYellow": "#FF9A00",
    "terminal.ansiBrightYellow": "#FFB84D",

    // Success/Info - Radioactive green you just picked
    "terminal.ansiGreen": "#8fe750",
    "terminal.ansiBrightGreen": "#a2ff5e",

    // Selection in terminal
    "terminal.selectionBackground": "#FF9A0044",

    /* Terminal Cursor */
    "terminalCursor.foreground": "#FF9A00",
    "terminalCursor.background": "#131518",
		/* Gravity Gun - Standard State */
    "terminal.ansiBlue": "#4FC1FF",
    "terminal.ansiBrightBlue": "#71D5FF",

    /* Combine Technology - Teal/Cyan */
    "terminal.ansiCyan": "#56B6C2",
    "terminal.ansiBrightCyan": "#A1E9F0",

    /* Magenta - Used for some stack traces (Combine Energy) */
    "terminal.ansiMagenta": "#C792EA",
    "terminal.ansiBrightMagenta": "#D1AAFF"
  },
  "tokenColors": [
    {
      "name": "Comment",
      "scope": [
        "comment",
        "punctuation.definition.comment"
      ],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#5C6370"
      }
    },
		{
      "name": "Punctuation",
      "scope": [
        "punctuation",
        "meta.delimiter"
      ],
      "settings": {
        "foreground": "#8897a3"
      }
    },
    {
      "name": "Keywords, Storage (HEV Suit Orange)",
      "scope": [
        "keyword",
        "storage.type",
        "storage.modifier",
        "keyword.control"
      ],
      "settings": {
        "fontStyle": "bold",
        "foreground": "#FF9A00"
      }
    },
    {
      "name": "Variables",
      "scope": [
        "variable",
        "string constant.other.placeholder"
      ],
      "settings": {
        "foreground": "#DCDCDC"
      }
    },
    {
      "name": "Functions (Gravity Gun Blue)",
      "scope": [
        "entity.name.function",
        "support.function",
        "meta.function-call"
      ],
      "settings": {
        "foreground": "#4FC1FF"
      }
    },
    {
      "name": "Strings (Radioactive Green)",
      "scope": [
        "string"
      ],
      "settings": {
        "foreground": "#8fe750"
      }
    },
    {
      "name": "Numbers & Constants",
      "scope": [
        "constant.numeric",
        "constant.language",
        "support.constant"
      ],
      "settings": {
        "foreground": "#E5C07B"
      }
    },
    {
      "name": "Classes & Types (Combine Metal)",
      "scope": [
        "entity.name.type",
        "entity.name.class",
        "support.type",
        "support.class"
      ],
      "settings": {
        "foreground": "#56B6C2"
      }
    },
    {
      "name": "HTML Tags / JSX",
      "scope": [
        "entity.name.tag",
        "meta.tag.sgml"
      ],
      "settings": {
        "foreground": "#E06C75"
      }
    },
    {
      "name": "Attributes",
      "scope": [
        "entity.other.attribute-name"
      ],
      "settings": {
        "foreground": "#D19A66"
      }
    },
    {
      "name": "JSON Keys",
      "scope": [
        "support.type.property-name",
        "meta.object-literal.key"
      ],
      "settings": {
        "foreground": "#FF9A00"
      }
    },
		{
		  "name": "Markdown - Headings (Lambda Orange)",
		  "scope": [
		    "markdown.heading",
		    "markup.heading | markup.heading entity.name",
		    "markup.heading.markdown punctuation.definition.heading.markdown"
		  ],
		  "settings": {
		    "foreground": "#FF9A00",
		    "fontStyle": "bold"
		  }
		},
		{
		  "name": "Markdown - Code Blocks (Radioactive Green)",
		  "scope": [
		    "markup.fenced_code.block.markdown",
		    "markup.inline.raw.string.markdown",
		    "variable.language.fenced.markdown"
		  ],
		  "settings": {
		    "foreground": "#8fe750"
		  }
		},
		{
		  "name": "Markdown - Links (Gravity Gun Blue)",
		  "scope": [
		    "string.other.link.title.markdown",
		    "markup.underline.link.markdown",
		    "markup.underline.link.image.markdown"
		  ],
		  "settings": {
		    "foreground": "#4FC1FF"
		  }
		},
		{
		  "name": "Markdown - Bold & Italic",
		  "scope": [
		    "markup.bold",
		    "markup.italic"
		  ],
		  "settings": {
		    "foreground": "#DCDCDC",
		    "fontStyle": "bold"
		  }
		},
		{
		  "name": "Markdown - Lists & Quotes (Combine Grey)",
		  "scope": [
		    "beginning.punctuation.definition.list.markdown",
		    "punctuation.definition.quote.begin.markdown",
		    "markup.quote"
		  ],
		  "settings": {
		    "foreground": "#56B6C2"
		  }
		},
	{
  "name": "Markdown - Table Borders (Combine Teal)",
  "scope": [
    "punctuation.definition.table.markdown",
    "punctuation.separator.table.markdown",
    "markup.table.markdown"
  ],
  "settings": {
    "foreground": "#56B6C2"
  }
	},
	{
	  "name": "Markdown - Table Header (Lambda Orange)",
	  "scope": [
	    "markup.table.header.markdown",
	    "markup.table.header.markdown entity.name.section.markdown"
	  ],
	  "settings": {
	    "foreground": "#FF9A00",
	    "fontStyle": "bold"
	  }
	},
	{
	  "name": "Markdown - Table Content",
	  "scope": [
	    "markup.table.content.markdown"
	  ],
	  "settings": {
	    "foreground": "#DCDCDC"
	  }
	}
  ]
}